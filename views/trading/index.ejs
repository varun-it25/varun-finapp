<!-- Currency Search Script -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("text4b");
        const listContainer = document.getElementById("currencyList");
        const noResultsMessage = document.getElementById("noResultsMessage");

        if (searchInput) {
            searchInput.addEventListener("input", function () {
                const filter = searchInput.value.toLowerCase();
                const lists = listContainer.querySelectorAll("ul");
                let matchFound = false;

                lists.forEach((ul) => {
                    const listItem = ul.querySelector("li");
                    if (listItem) {
                        const text = listItem.innerText.toLowerCase();
                        const isMatch = text.includes(filter);
                        ul.style.display = isMatch ? "" : "none";
                        if (isMatch) matchFound = true;
                    }
                });

                noResultsMessage.style.display = matchFound ? "none" : "block";
            });
        }
    });

    // Amount increment/decrement logic
    document.addEventListener("DOMContentLoaded", function () {
        const amountDisplay = document.getElementById("amountDisplay");
        const totalAmount = document.getElementById("totalAmount");
        let amount = 1;
        const price = 500;

        function updateTotal() {
            totalAmount.value = `$ ${amount * price}`;
        }

        document.getElementById("increaseBtn").addEventListener("click", () => {
            amount++;
            amountDisplay.textContent = amount;
            updateTotal();
        });

        document.getElementById("decreaseBtn").addEventListener("click", () => {
            if (amount > 1) {
                amount--;
                amountDisplay.textContent = amount;
                updateTotal();
            }
        });

        updateTotal();
    });
</script>
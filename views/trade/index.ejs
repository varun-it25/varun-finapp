<style>
    #noResultsMessage {
        font-size: 16px;
        margin-top: 20px;
    }
</style>

<!-- Header Section -->
<div class="appHeader">
    <div class="left">
        <a href="/" class="headerButton goBack">
            <ion-icon name="chevron-back-outline"></ion-icon>
        </a>
    </div>
    <div class="pageTitle">Trade</div>
    <div class="right">
        <a href="app-notifications.html" class="headerButton">
            <ion-icon class="icon" name="notifications-outline"></ion-icon>
            <span class="badge badge-danger">4</span>
        </a>
    </div>
</div>

<!-- App Capsule -->
<div id="appCapsule">
    <div class="section mt-2">

        <!-- Tab Navigation -->
        <div class="form-group boxed">
            <div class="input-wrapper">
                <input type="text" class="form-control" id="text4b" placeholder="Enter any crypo here">
                <i class="clear-input">
                    <ion-icon name="close-circle"></ion-icon>
                </i>
            </div>
        </div>

        <div class="tab-content mt-1" id="currencyList">
            <div class="d-flex justify-content-between align-items-center ps-2 pe-3 mt-2">
                <p>Currencies</p>
                <h4>Payout</h4>
            </div>

            <p id="noResultsMessage" style="text-align:center; display:none; color: #888;">
                No matching currencies found.
            </p>

            <ul class="listview image-listview inset mb-1">
                <li>
                    <div class="item">
                        <div class="icon-box bg-primary">
                            <!-- <h3 class="mt-1">A</h3> -->
                            <div class="w-100 h-100">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/46/Bitcoin.svg/2048px-Bitcoin.svg.png" class="w-100 h-100 rounded-circle" />
                            </div>
                        </div>
                        <div class="in">
                            <div>AED/CNT OTC</div>
                            <h3 class="mt-1 text-success">90 %</h3>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>



<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("text4b");
        const listContainer = document.getElementById("currencyList");
        const noResultsMessage = document.getElementById("noResultsMessage");

        searchInput.addEventListener("input", function () {
            const filter = searchInput.value.toLowerCase();
            const lists = listContainer.querySelectorAll("ul");
            let matchFound = false;

            lists.forEach((ul) => {
                const listItem = ul.querySelector("li");
                if (listItem) {
                    const text = listItem.innerText.toLowerCase();
                    const isMatch = text.includes(filter);
                    ul.style.display = isMatch ? "" : "none";
                    if (isMatch) matchFound = true;
                }
            });

            // Show or hide the "no results" message
            noResultsMessage.style.display = matchFound ? "none" : "";
        });
    });
</script>
                        <div class="form-group basic" style="margin-top: -12px;">
                            <input type="text" class="form-control" id="upiId" placeholder="e.g. username@bank" required pattern="^[a-zA-Z0-9.\-_]{2,256}@[a-zA-Z]{2,64}$">
                            <div class="clear-input">

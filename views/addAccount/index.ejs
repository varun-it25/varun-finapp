                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<!-- Validation Script -->
<script>
    // Bank Account Form Validation
    document.getElementById("bankAccountForm").addEventListener("submit", function (e) {
        e.preventDefault();
        let valid = true;

        const bankAccount = document.getElementById("bankAccountNumber");
        const holderName = document.getElementById("accountHolderName");
        const ifscCode = document.getElementById("ifscCode");

        // Reset errors
        document.getElementById("bankAccountError").classList.add("d-none");
        document.getElementById("holderNameError").classList.add("d-none");
        document.getElementById("ifscError").classList.add("d-none");

        // Validation
        if (!bankAccount.value.match(/^\d{9,18}$/)) {
            document.getElementById("bankAccountError").classList.remove("d-none");
            valid = false;
        }

        if (!holderName.value.trim()) {
            document.getElementById("holderNameError").classList.remove("d-none");
            valid = false;
        }

        if (!ifscCode.value.match(/^[A-Z]{4}0[A-Z0-9]{6}$/)) {
            document.getElementById("ifscError").classList.remove("d-none");
            valid = false;
        }

        if (valid) {
            alert("Bank account added successfully!");
            this.reset();
        }
    });

    // UPI Form Validation
    document.getElementById("upiAccountForm").addEventListener("submit", function (e) {
        e.preventDefault();
        let valid = true;
        const upiId = document.getElementById("upiId");
        document.getElementById("upiError").classList.add("d-none");

        if (!upiId.value.match(/^[a-zA-Z0-9.\-_]{2,256}@[a-zA-Z]{2,64}$/)) {
            document.getElementById("upiError").classList.remove("d-none");
            valid = false;
        }

        if (valid) {
            alert("UPI account added successfully!");
            this.reset();
        }
    });
</script>

